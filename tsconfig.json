{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "outDir": "out",
        "resolveJsonModule": false,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src", "test"]
}
