{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "outDir": "out",
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "out"]
}
